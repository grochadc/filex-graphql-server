{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "noImplicitAny": false,
    "removeComments": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "dist/",
    "sourceMap": false
  },
  "include": ["src/"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
