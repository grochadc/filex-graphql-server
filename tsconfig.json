{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2016",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "outDir": "dist/",
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./src",
    "downlevelIteration": true,
    "sourceMap": true,
    "resolveJsonModule": true
  },
  "include": ["src/"],
  "exclude": ["node_modules", "**/*.spec.ts", "src/__tests__/", "**/*.test.ts", "dist"]
}
